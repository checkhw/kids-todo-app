{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",               // ✅ ここが今回のポイント！
    "jsx": "react-jsx",
    "moduleResolution": "Node16",     // ✅ これとセットで必要！
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}